[user]
  email = kaleb.bordner@gmail.com
  name = Kaleb Bordner

[credential]
  helper = store

[core]
  editor = vim

[color "status"]
  added = green
  changed = yellow
  untracked = red

[pull]
  rebase = true

[fetch]
  prune = true

[alias]
  a = add
  aa = add -A

  br = branch
  brD = branch -D

  rb = rebase -i

  co = checkout
  c- = checkout -
  ci = commit
  cm = commit -m

  # open all files that have modifications in vim
  edit = "!vim `git ls-files -m` -p"

  ll = log --pretty=format:'%C(magenta)%hn%C(reset) committed by %C(blue)%ce%C(reset) on %C(yellow)%ch%C(reset) %C(magenta)%d %n * %C(magenta)%s%C(reset) *' --stat
  ls = log --pretty=format:'%C(magenta)%hn%C(reset) [%C(blue)%ce%C(reset) @ %C(yellow)%ci%C(reset)%C(reset)]: %C(magenta)%s%C(reset)'
  lg = ls --graph
  sl = shortlog --pretty=format:'%h%x09(%ar)%x09%s'

  st = status
  sts = status -s
  unstage = reset HEAD --
  tree = log --graph --decorate --oneline --abbrev-commit --all

  fpush = push --force-with-lease
  fps = push --force-with-lease
  psf = push --force-with-lease

  ps = push
  pl = pull

  save = !git add -A && git commit -m 'SAVEPOINT'
  undo = reset HEAD~1 --mixed
  wipe = !git add -A && git commit -m 'WIPE SAVEPOINT' && git reset HEAD~1 --hard

[mergetool]
  keepBackup = true
[merge]
  tool = meld
[mergetool "meld"]
  path = /usr/bin/meld

[pull]
  rebase = true

[color]
  ui = auto

[advice]
  pushNonFastForward = false
