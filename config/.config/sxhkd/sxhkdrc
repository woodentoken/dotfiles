#
# wm independent hotkeys
#

# terminal emulator
super + Return
	x-terminal-emulator

# ranger
super + r
  x-terminal-emulator -e ranger

# nnn
super + n
  x-terminal-emulator -e nnn

# terminal emulator
super + e
	thunar

# screenshot key
super + c
  flameshot gui

# browser key
super + b
  firefox

# screenshot key
Print
  flameshot gui

# program launcher
super + @space
	rofi -show drun

# program launcher
super + alt + @space
	rofi -show drun

# program launcher
alt + Tab
	rofi -show window

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/ bspwm
super + alt + q
	bspc quit

# restart bspwm
super + alt + r
	bspc wm -r; notify-send 'sxhkd' 'Reloaded config'

# reload sxhkdrc
super + shift + r
    pkill -usr1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }.
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + {Up,Down}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Move current window to a pre-selected space
super + shift + m
    bspc node -n last.!automatic

# MOVE TO NEXT DESKTOP
super + shift + {Up,Down} 
    bspc node -d {prev,next}.local --follow;

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# move window to another monitor, theoretically...
super + shift + {Left,Down,Up,Right}
	dir={west,south,north,east}; \
	bspc node -s "$dir.local" --follow \
	    || bspc node -m "$dir" --follow


# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    {bspc node @parent/second -z left -50 0; \
    bspc node @parent/first -z right -50 0, \
    bspc node @parent/second -z top 0 +50; \
    bspc node @parent/first -z bottom 0 +50, \
    bspc node @parent/first -z bottom 0 -50; \
    bspc node @parent/second -z top 0 -50, \
    bspc node @parent/first -z right +50 0; \
    bspc node @parent/second -z left +50 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -50 0,top 0 50,bottom 0 -50,left 50 0}

# move a floating window
# super + {Left,Down,Up,Right}
	# bspc node -v {-50 0,0 50,0 -50,50 0}
